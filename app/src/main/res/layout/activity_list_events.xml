<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.ListEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnToggleSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnToggleSingle"
            android:visibility="visible"
            android:background="?android:attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/thirdColor"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnToggleRepetitive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnToggleRepetitive"
            android:background="@drawable/btn_list_event_rpt_bottom_left"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#FFFFFF"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleListSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_single_event"
            android:textSize="16sp"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/titleListRepetitive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_repetitive_event"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/eventsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>