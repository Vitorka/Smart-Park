<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deseja acessar o evento?"
            android:textSize="20sp"
            android:textColor="@color/dialogTitle"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caso o evento seja acessado, ele será deletado após ser finalizado"
            android:textSize="14sp"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/confirmAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sim"
            android:backgroundTint="@color/positive"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/dismissAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não"
            android:backgroundTint="@color/negative"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>